# Test Environment Configuration

# Node environment
NODE_ENV=test

# Server configuration
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=silent

# Service info
SERVICE_NAME=fastify-service-test
SERVICE_VERSION=1.0.0

# Database (PostgreSQL) - Use same DB as dev for tests
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ts_service_db?schema=public

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=test-secret-key-for-jwt-tokens-only
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
API_KEY=test-api-key

# CORS
CORS_ORIGIN=*

# Feature flags
ENABLE_METRICS=false
ENABLE_HEALTH_CHECK=true
ENABLE_SWAGGER=false
