# =============================================================================
# TEST ENVIRONMENT CONFIGURATION
# =============================================================================
# Used by E2E tests in test-e2e.sh script
# This file is safe to commit - uses hardcoded test secrets

NODE_ENV=test
PORT=3001

# Test Database
DATABASE_URL=postgresql://testuser:testpassword@localhost:5433/fastify_test

# Test Redis
REDIS_URL=redis://localhost:6380

# Test JWT Secret (hardcoded for tests - NOT for production!)
# Generated with: openssl rand -base64 64
JWT_SECRET=test_jwt_secret_for_e2e_tests_only_min_64_chars_required_do_not_use_in_production_environment_ever

# JWT expiration
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# Service mode
MODE=api

# Security (relaxed for tests)
CORS_ORIGIN=*
ENABLE_RATE_LIMIT=false

# Features
ENABLE_METRICS=false
ENABLE_HEALTH_CHECK=true
ENABLE_SWAGGER=false

# Timeouts
REQUEST_TIMEOUT=30000
CONNECTION_TIMEOUT=10000
KEEP_ALIVE_TIMEOUT=5000

# Queue (not needed for E2E tests)
QUEUE_CONCURRENCY=5
QUEUE_REMOVE_ON_COMPLETE=10
QUEUE_REMOVE_ON_FAIL=50
