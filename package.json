{
  "name": "ts-service-template",
  "version": "1.0.0",
  "description": "TypeScript service template with ESLint, Prettier, and Husky",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "//dev": "=== Development ===",
    "dev": "MODE=all tsx watch -r tsconfig-paths/register src/server.ts",
    "dev:api": "MODE=api tsx watch -r tsconfig-paths/register src/server.ts",
    "dev:worker": "MODE=worker tsx watch -r tsconfig-paths/register src/worker.ts",
    "dev:all": "MODE=all tsx watch -r tsconfig-paths/register src/server.ts",
    "//build": "=== Build & Production ===",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "MODE=api node -r tsconfig-paths/register dist/server.js",
    "start:api": "MODE=api node -r tsconfig-paths/register dist/server.js",
    "start:worker": "MODE=worker node -r tsconfig-paths/register dist/worker.js",
    "start:all": "MODE=all node -r tsconfig-paths/register dist/server.js",
    "//quality": "=== Code Quality ===",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\"",
    "type-check": "tsc --noEmit",
    "//test-unit": "=== Testing - Unit ===",
    "test": "vitest run tests/unit",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest watch tests/unit",
    "test:unit:queue": "vitest run tests/unit/shared/queue tests/unit/modules/jobs",
    "test:coverage": "vitest run --coverage tests/unit",
    "test:coverage:unit": "vitest run --coverage tests/unit",
    "//test-e2e": "=== Testing - E2E ===",
    "test:e2e": "vitest run tests/e2e",
    "test:e2e:watch": "vitest watch tests/e2e",
    "test:e2e:queue": "vitest run tests/e2e/queue-worker.test.ts",
    "test:e2e:full": "./scripts/test-e2e.sh",
    "//test-other": "=== Testing - Other ===",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage:full": "vitest run --coverage",
    "test:changed": "vitest related",
    "test:ci": "vitest run tests/unit --coverage --reporter=default --reporter=json",
    "test:db:setup": "docker compose -f docker-compose.test.yml up -d && sleep 5 && npm run prisma:migrate && npm run prisma:seed",
    "test:db:teardown": "docker compose -f docker-compose.test.yml down -v",
    "//database": "=== Database - Prisma ===",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "//docker-dev": "=== Docker - Development ===",
    "docker:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "docker:build": "docker compose -f docker-compose.dev.yml build",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:restart": "docker compose -f docker-compose.dev.yml restart",
    "docker:clean": "docker compose -f docker-compose.dev.yml down -v",
    "//docker-test": "=== Docker - Testing ===",
    "docker:test:up": "docker compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker compose -f docker-compose.test.yml down -v",
    "//docker-prod": "=== Docker - Production ===",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:prod:api": "docker compose -f docker-compose.prod.api.yml up -d",
    "docker:prod:worker": "docker compose -f docker-compose.prod.worker.yml up -d",
    "//maintenance": "=== Maintenance ===",
    "clean": "rm -rf dist coverage .vitest",
    "clean:full": "rm -rf dist coverage .vitest node_modules",
    "clean:docker": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.test.yml down -v",
    "reset": "npm run clean:full && npm run clean:docker && npm install",
    "//git-hooks": "=== Git Hooks ===",
    "prepare": "husky install",
    "precommit": "npm run lint:check && npm run format:check && npm run type-check && npm run test"
  },
  "keywords": [
    "typescript",
    "service",
    "template",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "axios": "^1.12.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^14.0.0",
    "husky": "^8.0.3",
    "pino-pretty": "^10.3.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "tsc-alias": "^1.8.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  },
  "dependencies": {
    "@bull-board/api": "^6.13.0",
    "@bull-board/fastify": "^6.13.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/redis": "^7.0.2",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^5.7.0",
    "@types/ms": "^2.1.0",
    "awilix": "^11.0.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.0.0",
    "dotenv": "^16.0.0",
    "fastify": "^5.6.1",
    "fastify-type-provider-zod": "^6.0.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "prisma": "^5.7.0",
    "prom-client": "^15.1.3",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
