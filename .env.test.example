# Test Environment Variables
# Copy this to .env.test before running E2E tests: cp .env.test.example .env.test

NODE_ENV=test
PORT=3001

# Database
DATABASE_URL=postgresql://testuser:testpassword@localhost:5433/fastify_test

# Redis
REDIS_URL=redis://localhost:6380

# JWT - MUST match between test runs
JWT_SECRET=test-jwt-secret-for-e2e-tests-must-be-at-least-64-characters-long-for-security-validation
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Features
ENABLE_RATE_LIMIT=false
ENABLE_SWAGGER=true
ENABLE_METRICS=false

# CORS
CORS_ORIGIN=*

# Service
SERVICE_NAME=fastify-test
SERVICE_VERSION=1.0.0-test
