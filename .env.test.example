# ==============================================
# Test Environment Variables
# ==============================================
# Used for E2E tests
# Copy this file to .env.test for local testing
# ==============================================

NODE_ENV=test
PORT=3001
LOG_LEVEL=silent

# Test Database (separate from development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/test_db

# Test Redis
REDIS_URL=redis://localhost:6380

# Test JWT Secret (different from production!)
JWT_SECRET=test-jwt-secret-min-64-chars-for-testing-purposes-only-never-use-in-prod
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Disable features in tests
ENABLE_SWAGGER=false
ENABLE_RATE_LIMIT=false
ENABLE_METRICS=false

# Queue config for tests
QUEUE_CONCURRENCY=1
QUEUE_REMOVE_ON_COMPLETE=10
QUEUE_REMOVE_ON_FAIL=100
